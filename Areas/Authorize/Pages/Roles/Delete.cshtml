@page "/roles/delete/{roleid}"
@model ASP_RazorWeb.Pages.Roles.DeleteModel
@{
    ViewData["Title"] = "Xóa Role";
}
<h1>@ViewData["Title"]</h1>
<div>
    <p class="">Bạn muốn xóa role @Model.role.Name?</p>
    <form method="POST">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đồng ý</button>
            <a asp-page="./Index" class="btn btn-danger">Hủy</a>
        </div>
    </form>
</div>