@using Microsoft.AspNetCore.Identity
@using ASP_RazorWeb.Models
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

<div class="navbar-nav">
    @if(signInManager.IsSignedIn(User)) {
        <li class="nav-item">
          <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
          Xin chào @userManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link border-0 bg-transparent">Đăng xuất</button>
            </form>
        </li>
    }else {
        <li class="nav-item">
          <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
    }
    
</div>

